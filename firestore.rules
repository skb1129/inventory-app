rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	function isAdmin() {
    	return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /items/{item} {
    	allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
  }
}
